<div class="container">
<div class="row">
    <div><hr><h1 class="page-title">Your Favorite Drinks</h1><hr></div>
<% @favorites.each do |fav| %>
    <div class="fav-list-box">
        <h3 class="drink-name"> <%= link_to fav.img, fav %> </h3>
        <p> <%= fav.description %></p>
        <% @comments.each do |com| %>
            <% if com.drink_id.to_s == fav.id.to_s %>
                <p><%= com.content %></p>
            <% end %>
        <% end %>
    <%= link_to 'Delete', fav, :class => 'js-delete-btn btn btn-danger' %>
    <%= link_to 'Add Comment', new_comment_path(fav), :class => 'btn btn-danger' %> 
    </div>
<% end %>
</div>
</div>