<% @drinks.each do |res| %>
	<div>
		<h2 class="title_color">
		<a href="/drink/<%= res['id'] %>"><%= res['name']%></a>
		<small class= "rating_color"> Rating: <%= res['rating'] %></small></h2>
		<h3 class="ing_color"> Ingredients: </h3>
		<ul>
			<% res['ingredients'].each do |el| %>
			<li><%= el['textPlain'] %></li>
			<% end %>
		</ul>
		<h3 class="dir_color"> Directions: <%= res['descriptionPlain'] %> </h3>
	</div>
	<%= bootstrap_form_for :favorites, url: '/favorites' do |f| %>
		<%= f.hidden_field :drink_id, :value => res['id']  %>
		<%= f.hidden_field :description, :value => res['descriptionPlain']  %>
		<%= f.hidden_field :img, :value => res['name']  %>
	    <%= f.hidden_field :user_id, :value => @current_user.id %>
	    <%= f.submit "Add To Favorites!" %>
	<% end %>

<% end %>

